<div class="row">
    <div class="col-md-3 text-center user-image">
        <%= image_tag @profile.avatar.url(:medium) %>
    </div>
    <div class="col-md-6">
    <h1><%= @profile.first_name %> <%= @profile.last_name %></h1>
    <h3> <span class="job-title-icon"><%= job_title_icon %></span> <%= @profile.job_title %></h3>
    <div class="well profile-description content">
        <h3>Description</h3>
        <%= @profile.description %>
    </div>
    
    <% if current_user.plan_id ==2 %>
        <div class="well contact-info content">
            <h3>Contact Information</h3>
            <%= @profile.phone_number %><br>
            <%= @profile.contact_email %><br>
        </div>
    <% end %>
    
    </div>
    
</div>